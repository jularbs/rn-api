{
  "watch": [
    "routes/",
    "models/",
    "middleware/",
    "config/",
    "index.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "docs/",
    "*.test.js",
    "*.spec.js"
  ],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo 'ðŸ”„ Restarting server due to file changes...'",
    "crash": "echo 'ðŸ’¥ Server crashed - waiting for file changes to restart...'",
    "start": "echo 'ðŸš€ Server started successfully'"
  },
  "signal": "SIGTERM",
  "verbose": false
}
